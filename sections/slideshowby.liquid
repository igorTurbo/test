<script src="{{ 'slick.min.js' | asset_url }}"></script>
<div data-section-id="{{ section.id }}"
 data-section-type="slideshow-section" class="single-item">
 
  {%- if section.blocks.size <= 0 -%}

    <div>Sem conteudo :(</div>
  {%-else-%}
    <div class="flex flex-column overflow-hidden">
        <div class="flex flex-row w-100vh overflow-hidden">
            {%- for block in section.blocks -%}
                <div>
                    <img src="{{block.settings.image | img_url: '1000x1000'}}" class="w-full"/>
                </div>
            {%- endfor -%}
        </div>
        <button class="w3-button w3-black w3-display-left" onclick="plusDivs(-1)">&#10094;</button>
        <button class="w3-button w3-black w3-display-right" onclick="plusDivs(1)">&#10095;</button>
    </div>
  {%- endif -%}
</div>

<script>
    $('.biroslideshow_slide').slick();
</script>

{% schema %}
    {
        "name": "biroslideshow",
        "max_blocks": 6,
        "settings": [
            {
                "type": "select",
                "id": "slideshow_height",   
                "label": "Slide Height",
                "default": "adapt",
                "info": "info about content above",
                "options": [
                    {
                        "label": "adapt",
                        "value": "adapt"
                    },
                    {
                        "label": "small",
                        "value": "small"
                    }
                ]
            }
        ],

        "blocks": [
            {
                "type": "image",
                "name": "Image slide",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "image"

                    },
                    {
                        "type": "url",
                        "id": "button_link",
                        "label": "Url"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "biroslideshow",
                "category": "Image",
                "blocks": [
                    {
                        "type": "image"
                    },
                    {
                        "type": "image"
                    }
                ]
            }
        ]
    }
{% endschema %}