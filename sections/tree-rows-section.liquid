<div data-section-id="{{ section.id }}" data-section-type="collection-template" class="search-main-section" id="shelf">
    {% for product in collection.products %}                                    
        <li>
            {% include 'productCardList3', product: product %}                                    
        </li>
        {% if collection.handle == 'all' and collection.all_vendors.size == 0 and collection.all_types.size == 0%}
        {% else %}
            {%- assign is_empty_collection = true -%}
        {%endif%}
    {% else %}
        {% comment %} If don't have any product {% endcomment %}
        {% if is_empty_collection %}
        <div class="grid__item small--text-center">
            <p class="text-center"> Sem produtos :(</p>
        </div>
        {% endif %}
    {%endfor%}
</div>