<div style="min-height: 70vh;">
    <div class="product-template__container page-width" id="ProductSection-{{ section.id }}"
        data-section-id="{{ section.id }}" data-section-type="product" data-enable-history-state="true">

        <section class="cby-container-fluid" id="product-container">

            <div class="row">
                <div class="fl relative w-100 cby_pr_images">
                    <div class="product-name w-100 tc fw7 f4 fw4-ns f5-ns mt2 mb3">
                        <div id="product-images">
                            <img class="productImage"
                                src="{{ product.featured_image | img_url: '1000x1000', scale: 2 }}" />
                        </div>
                    </div>
                </div>
                <div class="fl relative w-100 cby_pr_details tc tl-l">
                    <div class="cby_pr_details__wrapper" style="display:flex; flex-direction:column; justify-content:space-between; background-color:#dcdcdc; padding: 5px 15px 5px;">
                        <div class="product-name">
                            <h1 style="display:flex; justify-content:center; align-items:center;">
                                <div>
                                    {{product.title}}
                                </div>
                            </h1>
                        </div>
                        {% if product.price > 0%}
                            <div>
                                <div class="plugin-preco" >
                                    <div>
                                        {% include 'variantimages' %}
                                    </div>

                                    <div style="display:flex; flex-direction:row; justify-content:space-between;">
                                        <div class="productPrice">
                                            <p class="descricao-preco">
                                                <em class="valor-por price-best-price" style="display: inline-block;">
                                                    Por: <strong class="skuBestPrice">
                                                        {{ product.price | money }}
                                                    </strong>
                                                </em>
                                            </p>
                                        </div>
                                        <div style="display:flex; justify-content:center; align-items:center;">
                                            {% form 'product', product, id: variant.id %}
                                                <input type="hidden" class="button-variant-id" name="id"/>
                                                <button 
                                                    class="addCartButton"
                                                    style="background-color: white; padding: 5px;" 
                                                    type="submit"
                                                >
                                                    Add to cart
                                                </button>
                                            {% endform %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            Sold out
                        {% endif %}
                    </div>
                    {% include 'ajaxifyCart' %}
                </div>
            </div>
        </section>
    </div>
</div>